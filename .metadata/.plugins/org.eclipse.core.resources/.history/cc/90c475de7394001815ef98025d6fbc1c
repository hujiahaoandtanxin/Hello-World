  </select>
  
  <!--查询前三条数据  -->
  <select id="selectOrderToLimit"  resultMap="BaseResultMap">
  select * from `order` order  by order_id AND order_status = #{orderStatus} desc limit 0,3 ;
  </select>
  
  <!--查询订单表的所有数据  -->
