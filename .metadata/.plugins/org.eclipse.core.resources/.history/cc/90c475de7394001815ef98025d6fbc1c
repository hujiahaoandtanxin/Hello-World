  <!--多表查询order表内嵌BusinessType表 + user表 -->
   <select id="selectOrderAndBusinessType" resultMap="o_b_ResleMap">
  SELECT * FROM `order` o, business_type b  ,`user` u WHERE  o.business_type_id=b.business_type_id AND order_status=#{orderStatus} AND o.user_id = u.user_id
   </select>
  
