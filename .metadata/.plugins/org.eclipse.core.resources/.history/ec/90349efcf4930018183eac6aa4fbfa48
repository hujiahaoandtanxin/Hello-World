  <!--部门表关联一张订单表 实现一对多查询 -->
  <select id="selectOrderByBusinessType" resultMap="myBusinessTypeMap">
  select * FROM business_type b, `order` o WHERE  b.type_name = "灯具维修"
  </select>
  
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
