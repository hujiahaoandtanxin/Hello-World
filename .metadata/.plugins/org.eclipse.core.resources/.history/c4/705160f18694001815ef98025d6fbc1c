  <!--通过openid查询电工信息+订单信息+用户信息  订单的显示   -->
  <select id="selectWiremanAllByOpenid" parameterType="java.lang.String" resultMap="WiremanAndOrder">
  	SELECT  w.wiremanId,w.username,w.openId,o.order_id,o.create_date,o.address,o.telphone,u.username,u.nick_name
  	FROM wireman w, `order` o , `user` u WHERE o.order_status = #{orderStatus} AND w.open_id = #{openid} AND u.user_id = o.user_id AND w.wireman_id = o.wireman_id
  </select>
  
  
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
